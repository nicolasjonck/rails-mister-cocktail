<h1><%= @cocktail.name %></h1>
<h2>Recipe:</h2>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
  </li>
<% end %>
</ul>
<h3>Add an ingredient to the recipe</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
<%= f.input :description, placeholder: "How much?" %>
<%= f.input :ingredient_id, collection: @ingredients - @cocktail.ingredients %>
<%= f.submit %>
<% end %>


<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
